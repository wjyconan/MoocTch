<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginLeft="@dimen/space_12"
    android:layout_marginRight="@dimen/space_12"
    android:gravity="end">

    <TextView
        android:id="@id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_20"
        android:layout_marginTop="@dimen/space_12"
        android:layout_toStartOf="@id/imgItemFirst"
        android:layout_toLeftOf="@id/imgItemFirst"
        android:textSize="@dimen/text_size_body"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="2"
        android:singleLine="false"
        android:textColor="@color/black_text_color_87" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/imgItemFirst"
        android:layout_width="76dp"
        android:contentDescription="@string/app_name"
        android:layout_height="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/tch_image_loading"/>

    <TextView
        android:id="@id/txtSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_20"
        android:layout_toStartOf="@id/imgItemFirst"
        android:layout_toLeftOf="@id/imgItemFirst"
        android:drawableLeft="@mipmap/tch_icon_hot"
        android:drawableStart="@mipmap/tch_icon_hot"
        android:drawablePadding="@dimen/space_8"
        android:ellipsize="end"
        android:paddingBottom="@dimen/space_10"
        android:textSize="@dimen/text_size_caption"
        android:gravity="bottom"
        android:singleLine="true"
        android:textColor="@color/black_text_color_54" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_bg_color" />
</RelativeLayout>