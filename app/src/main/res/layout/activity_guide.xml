<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.gridinfo.gridinfo_tch.activity.user.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@id/vpGuide"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@id/llayoutGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/imgIndicator0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:padding="5dip"
            android:src="@mipmap/tch_page_indicator_focused" />

        <ImageView
            android:id="@id/imgIndicator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:padding="5dip"
            android:src="@mipmap/tch_page_indicator_unfocused" />

        <ImageView
            android:id="@id/imgIndicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:padding="5dip"
            android:src="@mipmap/tch_page_indicator_unfocused" />

        <ImageView
            android:id="@id/imgIndicator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:padding="5dip"
            android:src="@mipmap/tch_page_indicator_unfocused" />
    </LinearLayout>
</RelativeLayout>
